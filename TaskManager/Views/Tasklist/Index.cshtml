@using Tasklyne.Models
@model IEnumerable<Tasklist>

@{
     ViewData["Title"] = "Tasklist";
}

<h1>Tasklist</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Project</th>
            <th>Completed</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tasklist in Model)
        {
            <tr>
                <td>@tasklist.Title</td>
                <td>@tasklist.Description</td>
                <td>
                    @foreach (var project in tasklist.ProjectList)
                    {
                        <span>@project.Name</span><br />
                    }
                </td>
                <td>@(tasklist.IsCompleted ? "Yes" : "No")</td>
                <td>@tasklist.CreatedAt</td>
            </tr>
        }
    </tbody>
</table>
