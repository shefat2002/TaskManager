@model TaskManager.Models.AssignTask

@{
    ViewData["Title"] = "Assign Task";
}
<h1>Assign Task</h1>

<form asp-controller="AssignTask" asp-action="Create" method="post">
    <div class="form-group">
        <label>Employee</label>
        <select asp-for="Employees" name="Employees" class="form-control" multiple>
            <option value="">Select Employee</option>
            @foreach (var employee in Model.Employees)
            {
                <option value="@employee.Id">@employee.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Task</label>
        <select asp-for="Tasklists" name="Tasklists" class="form-control" multiple>
            <option value="">Select Task</option>
            @foreach (var task in Model.Tasklists)
            {
                <option value="@task.Id">@task.Title</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="AssignDate"></label>
        <input asp-for="AssignDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
    </div>
    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-primary">Assign</button>
        <button type="reset" class="btn btn-warning">Reset</button>
    </div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>